<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include("partials/head-base.ejs", {title: "Iniciar sesión"}) %>
        <link rel="stylesheet" href="/css/login-register-create.css" />
        <!-- <script
            type="text/javascript"
            src="/js/validations/validator.min.js"
            defer
        ></script>
        <script src="/js/validations/userValidations.js" defer></script> -->
    </head>

    <body>
        <header><%- include("partials/header.ejs") %></header>

        <main>
            <% if (typeof errors != 'undefined'){ %>
            <ul>
                <% for (i=0; i < errors.length; i++) {%>
                <li style="color: aliceblue"><%= errors[i].msg %></li>
                <% } %>
            </ul>
            <% } %>
            <section class="login-back">
                <div class="login">
                    <h2>INGRESAR</h2>
                    <form action="/users/login" method="POST" id="registerForm">
                        <input
                            type="text"
                            placeholder="Usuario"
                            name="user"
                            id="name"
                        />
                        <div id="nameFeedback" class="feedback"></div>
                        <input
                            type="password"
                            placeholder="Contraseña"
                            name="password"
                            id="password"
                        />
                        <div id="nameFeedback" class="feedback"></div>
                        <div class="remember">
                            <label for="remember">Recordar usuario</label>
                            <input type="checkbox" name="remember" checked />
                        </div>
                        <button type="submit">INGRESAR</button>
                    </form>
                    <hr />
                    <div class="login-social">
                        <p>Ingresar con:</p>
                        <i class="fab fa-facebook fa-2x"></i>
                        <i class="fab fa-google fa-2x"></i>
                    </div>
                    <hr />
                    <a class="btn-register" href="/users/register"
                        >CREAR CUENTA</a
                    >
                </div>
            </section>
        </main>

        <footer><%- include("partials/footer.ejs") %></footer>
    </body>
</html>
