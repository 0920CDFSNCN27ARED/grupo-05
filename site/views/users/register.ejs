<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include("partials/head-base.ejs", {title: "Crear cuenta"}) %>
        <link rel="stylesheet" href="/css/login-register-create.css" />

        <script type="text/javascript" src="/js/validations/validator.min.js" defer></script>
        <script src="/js/validations/userValidations.js" defer></script>
    </head>

    <body>
        <header><%- include("partials/header.ejs") %></header>

        <main>
            <% if (typeof errors != 'undefined'){ %>
            <ul>
                <% for (i=0; i < errors.length; i++) {%>
                <li style="color: aliceblue"><%= errors[i].msg %></li>
                <% } %>
            </ul>
            <% } %>
            <section class="register-back">
                <div class="register">
                    <h2>CREAR CUENTA</h2>
                    <form
                        action="/users/register"
                        method="POST"
                        enctype="multipart/form-data"
                        id="registerForm"
                    >
                        <div>
                            <input
                                id="name"
                                type="text"
                                placeholder="Nombre y Apellido"
                                name="name"
                                class="validate"
                            />
                            <div id="nameFeedback" class="feedback"></div>
                        </div>

                        <div>
                            <input
                                id="user"
                                type="text"
                                placeholder="Usuario"
                                name="user"
                                class="validate"
                            />
                            <div id="userFeedback" class="feedback"></div>
                        </div>

                        <div>
                            <input
                                id="email"
                                type="email"
                                placeholder="Email"
                                name="email"
                                class="validate"
                            />
                            <div id="emailFeedback" class="feedback"></div>
                        </div>

                        <div>
                            <input
                                id="address"
                                type="text"
                                placeholder="Domicilio"
                                name="address"
                                class="validate"
                            />
                            <div id="addressFeedback" class="feedback"></div>
                        </div>

                        <div>
                            <input
                                id="password"
                                type="password"
                                placeholder="Contraseña"
                                name="password"
                                class="validate"
                            />
                            <div id="passwordFeedback" class="feedback"></div>
                        </div>

                        <div>
                            <input
                                id = "password2"
                                type="password"
                                placeholder="Repetir contraseña"
                                name="password2"
                                class="validate"
                            />
                            <div id="password2Feedback" class="feedback"></div>
                        </div>

                        <div>
                            <input
                                id="avatar"
                                type="file"
                                class="userAvatar"
                                name="avatar"
                                class="validate"
                            />
                            <div id="nameFeedback" class="feedback"></div>
                        </div>

                        <button type="submit">REGISTRARME</button>
                    </form>
                </div>
            </section>
        </main>

        <footer><%- include("partials/footer.ejs") %></footer>
    </body>
</html>
