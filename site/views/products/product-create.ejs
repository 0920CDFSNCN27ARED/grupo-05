<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include("partials/head-base.ejs", {title: "Crear producto"}) %>

        <script type="text/javascript" src="/js/validations/validator.min.js" defer></script>
        <script src="/js/validations/productValidations.js" defer></script>

        
        <script
        defer
        src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"
        ></script>
        <script
        defer
        src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
        crossorigin="anonymous"
        ></script>
        <link rel="stylesheet" href="/css/login-register-create.css" />
    </head>

    <body>
        <header><%- include("partials/header.ejs") %></header>

        <main>
            <% if (typeof errors != 'undefined'){ %>
                <ul>
                    <% for (i=0; i < errors.length; i++) {%>
                    <li style="color: aliceblue;"><%= errors[i].msg %></li>
                    <% } %>
                </ul>
                <% } %>
    
            <section class="create-back">
                <div class="create">
                    <h2>CREAR PRODUCTO</h2>
                    <form action="/products/create" enctype="multipart/form-data" method="POST" id="createForm" class="createForm">
                        <label>
                            <div class="field">
                                <input id="name" class="validate floating-input-create" type="text" placeholder="Nombre del producto" name="name" />
                                <label for="name" class="floating-label-create">Nombre del producto</label>
                            </div>
                            <div id="nameBorder" class="feedback-border-create"></div>
                            <span id="nameFeedback" class="feedback"></span>
                        </label>
                        <label>
                            <div class="field">
                                <input id="description" class="validate floating-input-create" type="text" placeholder="Descripción" name="description" />
                                <label for="description" class="floating-label-create">Descripción</label>
                            </div>
                            <div id="nameBorder" class="feedback-border-create"></div>
                            <span id="descriptionFeedback" class="feedback"></span>
                        </label>
                        <label>
                            <div class="field">
                                <input id="price" class="validate floating-input-create" type="number" placeholder="Precio" name="price" />
                                <label for="price" class="floating-label-create">Precio</label>
                            </div>
                            <div id="nameBorder" class="feedback-border-create"></div>
                            <span id="priceFeedback" class="feedback"></span>
                        </label>
                        <label>
                            <div class="field">
                                <input id="discount" class="validate floating-input-create" type="number" placeholder="Descuento" name="discount" />
                                <label for="discount" class="floating-label-create">Descuento</label>
                            </div>
                            <div id="nameBorder" class="feedback-border-create"></div>
                            <span id="discountFeedback" class="feedback"></span>
                        </label>
                        <select id="category" class="validate floating-select-create" type="text" name="category">
                            <option value="1">Consolas</option>
                            <option value="2">Juegos</option>
                            <option value="3">Accesorios</option>
                            <option value="4">Retro</option>
                        </select>
                        <select id="featured" class="validate floating-select-create" type="number" name="featured">
                            <option value="1">Producto destacado</option>
                            <option value="2" selected>
                                Producto no destacado
                            </option>
                        </select>
                        
                        <label class="cartel" for="photo"
                            >Imagen de producto
                            <input
                                class="photo"
                                type="file"
                                name="image"
                                placeholder="Foto producto"
                            />
                        </label>
                        <button type="submit">CREAR</button>
                    </form>
                </div>
            </section>
        </main>

        <footer><%- include("partials/footer.ejs") %></footer>
    </body>
</html>
